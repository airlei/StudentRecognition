<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.projects.modular.attendance.mapper.StudentMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.projects.modular.attendance.entity.Student">
        <id column="student_id" property="studentId" />
        <result column="name" property="name" />
        <result column="user_name" property="userName" />
        <result column="password" property="password" />
        <result column="tel" property="tel" />
        <result column="college" property="college" />
        <result column="major" property="major" />
        <result column="classes_id" property="classesId" />
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        student_id AS "studentId", name AS "name", user_name AS "userName", password AS "password", tel AS "tel", college AS "college", major AS "major", classes_id AS "classesId"
    </sql>

</mapper>
